<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Web Đầu Tiên</title>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
    <style>
        /* Đặt font chữ chung */
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        /* Tiêu đề chính */
        h1 {
            color: #007bff;
            font-size: 2.5em;
            margin-top: 20px;
        }

        /* Đoạn văn bản */
        p {
            font-size: 1.2em;
            color: #333;
        }

        /* Nút bấm */
        button {
            background-color: #28a745;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
            margin-top: 20px;
        }

        button:hover {
            background-color: #218838;
        }

        /* Liên kết */
        a {
            color: #007bff;
            text-decoration: none;
            font-size: 1.2em;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Container chính */
        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <h1>PRODUCT</h1>

    <div id="app">
        <h1>Firstname : {{firstname}}</h1>
        <h1>Lastname : {{lastname}}</h1>
        <h1>{{mydetails()}}</h1>
        <ul>
            <li v-for="value in productList.products">
                {{ value.id }} - {{ value.title }}
            </li>
        </ul>
    </div>

</body>
<script>
    var app = new Vue({
        el: '#app',  // Gắn Vue vào phần tử có id="app"
        data: {
            firstname: "John",
            lastname: "Doe",
            subject: "GreatLearning VueJS Tutorial",
            productList: Object
        },
        methods: {
            mydetails: function () {
                return "I am " + this.firstname + " " + this.lastname +
                    " studying " + this.subject;
            }
        },
        mounted: async function () {
            const response = await fetch("https://dummyjson.com/products");
            var jsonResponse = await response.json();
            this.productList = jsonResponse;

            console.log(this.productList);
        }
    })
</script>

</html>